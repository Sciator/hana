{
  "name": "hana",
  "private": true,
  "version": "0.0.0-development",
  "scripts": {
    "script": "cd ./scripts/ && ts-node-script",
    "ts-node-script": "ts-node-script",
    "postinstall": "run-p install:*",
    "install:server": "yarn --cwd server install",
    "install:ui": "yarn --cwd ui install",
    "ci": "yarn install --ignore-scripts --frozen-lockfile & run-p ci:*",
    "ci:server": "yarn --cwd server install --frozen-lockfile",
    "ci:ui": "yarn --cwd ui install --frozen-lockfile",
    "build": "yarn ci && run-p build:*",
    "build:ui": "yarn --cwd ui build",
    "build:server": "yarn --cwd server build",
    "dist": "yarn build && yarn script dist",
    "pkg": "pkg",
    "dev": "run-p dev:*",
    "dev:server": "yarn --cwd server dev",
    "dev:ui": "yarn --cwd ui dev",
    "semantic-release": "semantic-release",
    "lint": "tslint -c tslint.json ./{ui/src,server/src,common}/**/*.ts{,x}",
    "lint:fix": "yarn lint --fix"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@types/node": "^14.11.1",
    "npm-run-all": "^4.1.5",
    "pkg": "^4.4.9",
    "semantic-release": "^17.1.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheRWe/hana.git"
  },
  "release": {
    "assets": "dist/*"
  }
}