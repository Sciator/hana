{
  "name": "hana",
  "private": true,
  "version": "0.0.0-development",
  "scripts": {
    "script": "cd ./scripts/ && ts-node-script",
    "ts-node-script": "ts-node-script",
    "postinstall": "run-p install:*",
    "install:ui": "yarn --cwd ui install",
    "ci": "yarn install --ignore-scripts --frozen-lockfile && run-s ci:*",
    "ci:ui": "yarn --cwd ui install --frozen-lockfile",
    "build": "run-p build:*",
    "build:ui": "yarn --cwd ui build",
    "dist": "yarn ci && run-s build \"script dist\"",
    "pkg": "pkg",
    "dev": "run-p dev:*",
    "dev:ui": "yarn --cwd ui dev",
    "semantic-release": "semantic-release",
    "lint": "tslint -c tslint.json ./{ui/src}/**/*.ts{,x}",
    "lint:fix": "yarn lint --fix"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@types/node": "^14.11.1",
    "npm-run-all": "^4.1.5",
    "pkg": "^4.4.9",
    "semantic-release": "^17.1.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sciator/hana.git"
  },
  "release": {
    "assets": "dist/*"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.11"
  }
}
