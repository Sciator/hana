{
  "name": "hana",
  "private": true,
  "version": "0.0.0-development",
  "scripts": {
    "script": "cd ./scripts/ && ts-node-script",
    "ts-node-script": "ts-node-script",
    "postinstall": "run-s install:*",
    "install:server": "yarn --cwd server install",
    "install:ui": "yarn --cwd ui install",
    "build": "yarn install && run-p build:*",
    "build:ui": "yarn --cwd ui build",
    "build:server": "yarn --cwd server build",
    "dist": "yarn build && yarn script dist",
    "pkg": "pkg",
    "dev": "run-p dev:*",
    "dev:server": "yarn --cwd server dev",
    "dev:ui": "yarn --cwd ui dev",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@types/node": "^14.11.1",
    "npm-run-all": "^4.1.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "semantic-release": "^17.1.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheRWe/hana.git"
  }
}
